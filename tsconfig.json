{
  "compilerOptions": {
    "typescript.tsdk" : "./node_modules/typescript/lib",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "redux" : ["node_modules/redux/redux", "node_modules/redux/dist/redux"],
      "@aneves/react-flyout" : ["node_modules/@aneves/react-flyout", "type-definitions/@aneves/react-flyout"],
      "redux-devtools-extension" : ["node_modules/redux-devtools-extension/", "type-definitions/redux-devtools-extension"],
      "draft-convert" : ["node_modules/draft-convert/", "type-definitions/draft-convert"],
      "react-highlight.js" : ["type-definitions/react-highlight/"],
      "components" : ["components/*"],
      "containers/*" : ["containers/*"],
      "stores/*" : ["stores/*"],
      "actions/*" : ["actions/*"],
      "reducers/*" : ["reducers/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}