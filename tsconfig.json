{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "redux" : ["node_modules/redux/redux", "node_modules/redux/dist/redux"],
      "@aneves/react-flyout" : ["node_modules/@aneves/react-flyout", "type-definitions/@aneves/react-flyout"],
      "components" : ["components/*"],
      "containers/*" : ["containers/*"],
      "stores/*" : ["stores/*"],
      "actions/*" : ["actions/*"],
      "reducers/*" : ["reducers/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}