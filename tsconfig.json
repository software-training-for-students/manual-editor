{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "lib": [
      "es6", "dom"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "redux" : ["node_modules/redux/redux", "node_modules/redux/dist/redux"],
      "@aneves/react-flyout" : ["type-definitions/@aneves/react-flyout"],
      "file-saver" : ["type-definitions/file-saver"],
      "react-highlight.js" : ["type-definitions/react-highlight"],
      "redux-dialog": ["type-definitions/redux-dialog"],
      "react-activity-indicator": ["type-definitions/react-activity-indicator"],
      "static/*": ["type-definitions/static"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}