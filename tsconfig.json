{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "ES5",
    "sourceMap": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "baseUrl": "node_modules",
    "paths": {
      "redux" : ["redux/redux", "redux/dist/redux"]
    }
  },
  "include": [
    "components",
    "reducers",
    "actions",
    "."
  ],
  "exclude": [
    "node_modules"
  ]
}