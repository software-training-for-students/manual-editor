{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": ["install"]
        },
        {
            "taskName": "update",
            "args": ["update"]
        },
        {
            "taskName": "build",
            "args": ["run", "build"]
        },
        {
            "taskName": "pack",
            "args": ["run", "pack"]
        },
        {
            "taskName": "lint-check",
            "args" : ["run", "lint-check"]
        },
        {
            "taskName": "lint-fix",
            "args" : ["run", "lint-fix"]
        }
    ]
}